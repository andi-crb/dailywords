extends layout

block content
  .row
  .col-md-12
    .jumbotron
        h2 Login
        br
        form(role='form', action="/login",method="post", style='max-width: 300px;')
          .form-group
            input.form-control(type='text', name="emailaddress", placeholder='Enter Email')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
          button.btn.btn-primary(type='submit') Submit
          a(href='/')
            button.btn.btn-default(type="button") Cancel