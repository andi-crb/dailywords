extends layout

block content
  .row
  .col-md-12
    .jumbotron
        h2 Sign Up
        br
        form(role='form', action="/signup", method="post", style='max-width: 300px;')
          .form-group
            input.form-control(type='text', name="email", placeholder='Enter Email Address')
          .form-group
            input.form-control(type='password', name="password", placeholder='Enter Password')
          button.btn.btn-primary(type='submit') Submit
          a(href='/')
            button.btn.btn-primary(type="button") Cancel
        
